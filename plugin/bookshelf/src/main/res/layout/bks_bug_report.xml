<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
	xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical"
	android:layout_width="fill_parent"
	android:layout_height="fill_parent"
	android:background="?attr/mainBackgroundColor"
>
	<TextView
		android:id="@+id/bks_bug_report_text"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:layout_alignParentTop="true"
		android:textAppearance="?android:attr/textAppearanceMedium"
	/>
	<Button android:id="@+id/bks_bug_report_send_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_alignParentRight="true"
		style="?attr/flatButtonStyle"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textStyle="bold"
		android:text="@string/button_send"
	/>
	<Button android:id="@+id/bks_bug_report_cancel_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:layout_alignParentBottom="true"
		android:layout_toLeftOf="@id/bks_bug_report_send_button"
		style="?attr/flatButtonStyle"
		android:textAppearance="?android:attr/textAppearanceLarge"
		android:textStyle="bold"
		android:text="@string/button_cancel"
	/>
</RelativeLayout>
